<% layout('/layouts/boilerplate') -%>
<body>
    <h1>Add a new Listing</h1>
    <form method="post" action="/listings">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="enter title" class="form-control">
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
             <textarea name="listing[description]" placeholder="enter description"  class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
             <input type="text" name="listing[image]" class="form-control">
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
             <input type="number" name="listing[price]" placeholder="enter price" class="form-control">
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
             <input type="text" name="listing[location]" placeholder="enter location" class="form-control">
        </div>

        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
             <input type="text" name="listing[country]" placeholder="enter country" class="form-control">
        </div>
       
        <button class="btn btn-dark">add</button>
    </form>
</body>
</html>